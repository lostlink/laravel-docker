{
    http_port 80
    https_port 443

    on_demand_tls {
        ask {$CADDY_ORIGIN_DOMAIN_CHECK_URL}
    }

    storage dynamodb {$CADDY_DYNAMODB_TABLE_NAME} {
        aws_region {$CADDY_DYNAMODB_AWS_REGION}
    }
}

